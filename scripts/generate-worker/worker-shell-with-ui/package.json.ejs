{
	"name": "<%= projectName -%>",
	"type": "module",
	"scripts": {
		"dev": "CLOUDFLARE_ENV=development vite",
		"build": "vite build",
		"lint": "biome lint --error-on-warnings ./src",
		"preview": "npm run build && vite preview",
		"deploy:production": "npm run build && wrangler deploy",
		"deploy:staging": "npm run build && wrangler deploy -e staging",
		"test": "vitest --watch=false",
		"test:ci": "vitest --watch=false",
		"type-check": "tsc --noEmit",
		"types": "wrangler types src/server/types/env.d.ts && npx tsx ../../scripts/export-env-interface.ts src/server/types/env.d.ts"
	}
}
